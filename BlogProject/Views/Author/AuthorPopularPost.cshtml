@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="sidebar-box">
    <h3 class="heading">Yazarın Popüler Yazıları</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="">
                       <a href="/Blog/BlogDetails/@item.BlogID">  <img src="@item.BlogImage" alt="Image placeholder" class="mr-4"></a>
                        <div class="text">
                            <a href="/Blog/BlogDetails/@item.BlogID"> <h4>@item.BlogTitle</h4></a>
                            <div class="post-meta">
                                <span class="mr-2">@item.BlogDate.ToString("dd-MMM-yyyy") </span>
                            </div>
                        </div>
                    </a>
                </li>
            }


        </ul>
    </div>
</div>

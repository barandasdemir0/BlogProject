@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@{count++;} @count</td>
            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogDate.ToShortDateString()</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-outline-info">Detaylar</a></td>
            <td><a href="/Blog/GetCommentByBlog/@item.BlogID" class="btn btn-outline-secondary">Yorumlar</a></td>
        </tr>
    }
</table>
<a href="/Blog/AddNewBlog/" class="btn btn-outline-success">Yeni Blog Ekle</a>

